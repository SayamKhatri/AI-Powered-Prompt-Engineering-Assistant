{
  "manifest_version": 3,
  "name": "PromptBud",
  "version": "1.0",
  "description": "Production",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "icons": {
    "48": "icons/logo.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icons/logo.png",
        "icons/logo_red.png"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
