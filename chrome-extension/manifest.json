{
  "manifest_version": 3,
  "name": "Prompt Template Assistant",
  "version": "1.0",
  "description": "Injects a test alert into ChatGPT.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://chat.openai.com/*"],
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "48": "icons/icon.png"
  }
}
