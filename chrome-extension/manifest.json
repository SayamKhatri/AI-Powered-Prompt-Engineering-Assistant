{
  "manifest_version": 3,
  "name": "Prompt Template Assistant (Fixed)",
  "version": "1.0",
  "description": "Test injection with alert.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "48": "icons/logo.png"
  }
}